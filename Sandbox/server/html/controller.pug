extends layout.pug

block js
  script(src="implementation.js")
  script.
    ready(() => {
      $("#join").addEventListener("click", () => {
        let req = new PresentationRequest($("#url").value);
        navigator.presentation.defaultRequest = req;
        req.getAvailability().then(a => {
          console.log("availability: ", a);
          req.start().catch(e => console.log(e));
        });
      });
    });
block content
  input#url(type="text",value="http://localhost/demoPage")
  button#join Join